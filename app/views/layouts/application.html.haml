!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Plastic Disco'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Classy Highlights'}"}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic' rel='stylesheet' type='text/css'>
    <link href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css' rel='stylesheet' type='text/css'>
    = stylesheet_link_tag 'application', media: 'all'
    = favicon_link_tag 'favicon.ico'
    
    
    = csrf_meta_tags
  %body(ng-app='plastic-disco')
    -#
      %header
        = render 'layouts/navigation'

    .container= render 'layouts/messages'
    .container= yield
    %br
    %br
    .container
      %table(style='width:100%; margin-bottom: 20px;')
        %tr
          %td= image_tag 'discoball-black.gif', class: 'disco-ball'
          %td.text-right
            %small
              = link_to 'Github', 'https://github.com/kyletns/plastic-disco'
              |
              - if user_signed_in?
                = link_to 'Sign out', signout_path
              - else
                = link_to 'Sign in', signin_path

    <script src = "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script>
    = javascript_include_tag 'application'
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
